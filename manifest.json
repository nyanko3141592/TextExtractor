{
  "manifest_version": 3,
  "name": "Text Extractor",
  "version": "1.1",
  "description": "Extracts all text from the webpage and saves it locally",
  "permissions": ["activeTab", "webNavigation", "scripting", "storage"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
